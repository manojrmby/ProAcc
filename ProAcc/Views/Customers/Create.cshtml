<script>
    function UserCheck() {
       
        $.post("@Url.Action("CheckUsernameAvailability","Customers")",
            {
                userdata: $("#UserName").val()
            },
        function (data) {
            if (data == 0) {
                $("#Status").html('');
                $("#UserName").css("border-color", "gray");
            }
            else {
                $("#Status").html('<font color="Red">UserName is Taken</font>');
                $("#UserName").css("border-color", "Red");
            }
        });
    }
</script>


